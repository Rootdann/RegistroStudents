@model StudentRegistrationSystem.Controllers.SearchViewModel

@{
    ViewData["Title"] = "Búsqueda";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
            <p class="lead">Busca estudiantes y cursos en el sistema.</p>
        </div>
    </div>

    <!-- Formulario de búsqueda -->
    <div class="row mb-5">
        <div class="col-md-8 mx-auto">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Index" method="get" class="mb-0">
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-primary text-white">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Buscar por nombre, curso o descripción..." aria-label="Término de búsqueda" />
                            <button class="btn btn-primary" type="submit">Buscar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
    {
        <!-- Resultados de la búsqueda -->
        <div class="row mb-4">
            <div class="col">
                <h2 class="fs-4 mb-3">Resultados para: <span class="text-primary">"@ViewBag.SearchTerm"</span></h2>
            </div>
        </div>

        <!-- Estudiantes encontrados -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-people me-2"></i>Estudiantes (@Model.Students.Count())
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Students.Any())
                        {
                            <div class="row row-cols-1 row-cols-md-3 g-4">
                                @foreach (var student in Model.Students)
                                {
                                    <div class="col">
                                        <div class="card h-100 shadow-sm">
                                            <div class="card-header bg-primary text-white">
                                                <h5 class="card-title mb-0">@student.Nombre</h5>
                                            </div>
                                            <div class="card-body">
                                                <ul class="list-group list-group-flush mb-3">
                                                    <li class="list-group-item d-flex justify-content-between">
                                                        <span><i class="bi bi-person me-2"></i>Edad:</span>
                                                        <strong>@student.Edad años</strong>
                                                    </li>
                                                    <li class="list-group-item d-flex justify-content-between">
                                                        <span><i class="bi bi-book me-2"></i>Curso:</span>
                                                        <strong>@student.Curso</strong>
                                                    </li>
                                                    <li class="list-group-item d-flex justify-content-between">
                                                        <span><i class="bi bi-graph-up me-2"></i>Promedio:</span>
                                                        <strong>@student.Promedio.ToString("F2")</strong>
                                                    </li>
                                                </ul>
                                                <div class="d-flex justify-content-between">
                                                    <a asp-controller="Students" asp-action="Details" asp-route-id="@student.Id" class="btn btn-outline-primary btn-sm">
                                                        <i class="bi bi-eye me-1"></i>Ver Detalles
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>No se encontraron estudiantes que coincidan con el término de búsqueda.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Cursos encontrados -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-book me-2"></i>Cursos (@Model.Courses.Count())
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Courses.Any())
                        {
                            <div class="row row-cols-1 row-cols-md-3 g-4">
                                @foreach (var course in Model.Courses)
                                {
                                    <div class="col">
                                        <div class="card h-100 shadow-sm @(course.IsActive ? "" : "border-danger")">
                                            <div class="card-header @(course.IsActive ? "bg-success" : "bg-danger") text-white">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <h5 class="card-title mb-0">@course.Name</h5>
                                                    @if (course.IsActive)
                                                    {
                                                        <span class="badge bg-light text-success">Activo</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-light text-danger">Inactivo</span>
                                                    }
                                                </div>
                                            </div>
                                            <div class="card-body">
                                                <p class="card-text mb-3">@course.Description</p>
                                                <ul class="list-group list-group-flush mb-3">
                                                    <li class="list-group-item d-flex justify-content-between">
                                                        <span><i class="bi bi-award me-2"></i>Créditos:</span>
                                                        <strong>@course.Credits</strong>
                                                    </li>
                                                </ul>
                                                <div class="d-flex justify-content-between">
                                                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="btn btn-outline-primary btn-sm">
                                                        <i class="bi bi-eye me-1"></i>Ver Detalles
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>No se encontraron cursos que coincidan con el término de búsqueda.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8 mx-auto text-center">
                <div class="alert alert-info p-5">
                    <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
                    <h4>Ingresa un término de búsqueda</h4>
                    <p class="mb-0">Puedes buscar por nombre de estudiante, curso o descripción.</p>
                </div>
            </div>
        </div>
    }
</div>
