@model IEnumerable<StudentRegistrationSystem.Models.Student>

@{
    ViewData["Title"] = "Listado de Estudiantes";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
            <p class="lead">Administra el registro de estudiantes del sistema.</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Nuevo Estudiante
            </a>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model) {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">@item.Nombre</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush mb-3">
                            <li class="list-group-item d-flex justify-content-between">
                                <span><i class="bi bi-person me-2"></i>Edad:</span>
                                <strong>@item.Edad a√±os</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span><i class="bi bi-book me-2"></i>Curso:</span>
                                <strong>@item.Curso</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span><i class="bi bi-graph-up me-2"></i>Promedio:</span>
                                <strong>@item.Promedio.ToString("F2")</strong>
                            </li>
                        </ul>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil me-1"></i>Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-info-circle me-1"></i>Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash me-1"></i>Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
