@model StudentRegistrationSystem.Models.SettingsViewModel

@{
    ViewData["Title"] = "Configuración";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
            <p class="lead">Administra tu perfil y preferencias del sistema.</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4 mb-4">
            <!-- Menú de navegación de configuración -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Opciones</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="#profile" class="list-group-item list-group-item-action active" data-bs-toggle="list">
                        <i class="bi bi-person me-2"></i>Perfil
                    </a>
                    <a href="#password" class="list-group-item list-group-item-action" data-bs-toggle="list">
                        <i class="bi bi-key me-2"></i>Contraseña
                    </a>
                    <a href="#appearance" class="list-group-item list-group-item-action" data-bs-toggle="list">
                        <i class="bi bi-palette me-2"></i>Apariencia
                    </a>
                </div>
            </div>
            
            <!-- Información del usuario -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Información</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="avatar-circle mx-auto mb-3">
                            <span class="avatar-initials">@(Model.Username.Length > 0 ? Model.Username[0].ToString().ToUpper() : "")</span>
                        </div>
                        <h5 class="mb-1">@Model.Username</h5>
                        <p class="text-muted mb-0">@(Model.IsAdmin ? "Administrador" : "Usuario")</p>
                    </div>
                    
                    <div class="mb-3">
                        <small class="text-muted d-block mb-1">Correo electrónico:</small>
                        <p class="mb-0">@Model.Email</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="tab-content">
                <!-- Perfil -->
                <div class="tab-pane fade show active" id="profile">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-light py-3">
                            <h5 class="mb-0"><i class="bi bi-person me-2"></i>Editar Perfil</h5>
                        </div>
                        <div class="card-body p-4">
                            <form asp-action="UpdateProfile" method="post">
                                <input type="hidden" asp-for="UserId" />
                                <input type="hidden" asp-for="Username" />
                                <input type="hidden" asp-for="IsAdmin" />
                                
                                <div class="mb-3">
                                    <label asp-for="Username" class="form-label">Nombre de Usuario</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                                        <input type="text" class="form-control" value="@Model.Username" disabled />
                                    </div>
                                    <small class="text-muted">El nombre de usuario no se puede cambiar.</small>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">Correo Electrónico</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                        <input asp-for="Email" class="form-control" placeholder="Ingrese su correo electrónico" />
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-save me-1"></i>Guardar Cambios
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                
                <!-- Contraseña -->
                <div class="tab-pane fade" id="password">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-light py-3">
                            <h5 class="mb-0"><i class="bi bi-key me-2"></i>Cambiar Contraseña</h5>
                        </div>
                        <div class="card-body p-4">
                            <form asp-action="UpdateProfile" method="post">
                                <input type="hidden" asp-for="UserId" />
                                <input type="hidden" asp-for="Username" />
                                <input type="hidden" asp-for="Email" />
                                <input type="hidden" asp-for="IsAdmin" />
                                
                                <div class="mb-3">
                                    <label asp-for="CurrentPassword" class="form-label">Contraseña Actual</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                        <input asp-for="CurrentPassword" class="form-control" type="password" placeholder="Ingrese su contraseña actual" />
                                    </div>
                                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="NewPassword" class="form-label">Nueva Contraseña</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                        <input asp-for="NewPassword" class="form-control" type="password" placeholder="Ingrese su nueva contraseña" />
                                    </div>
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirme su nueva contraseña" />
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-save me-1"></i>Cambiar Contraseña
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                
                <!-- Apariencia -->
                <div class="tab-pane fade" id="appearance">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-light py-3">
                            <h5 class="mb-0"><i class="bi bi-palette me-2"></i>Apariencia</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="mb-4">
                                <h6 class="mb-3">Tema</h6>
                                <div class="d-flex">
                                    <div class="form-check me-4">
                                        <input class="form-check-input" type="radio" name="theme" id="themeLight" value="light" checked>
                                        <label class="form-check-label" for="themeLight">
                                            <i class="bi bi-sun me-1"></i>Claro
                                        </label>
                                    </div>
                                    <div class="form-check me-4">
                                        <input class="form-check-input" type="radio" name="theme" id="themeDark" value="dark">
                                        <label class="form-check-label" for="themeDark">
                                            <i class="bi bi-moon me-1"></i>Oscuro
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="theme" id="themeAuto" value="auto">
                                        <label class="form-check-label" for="themeAuto">
                                            <i class="bi bi-circle-half me-1"></i>Automático
                                        </label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-4">
                                <h6 class="mb-3">Color Principal</h6>
                                <div class="d-flex flex-wrap">
                                    <div class="color-option me-3 mb-3" style="background-color: #0d6efd;" data-color="blue"></div>
                                    <div class="color-option me-3 mb-3" style="background-color: #198754;" data-color="green"></div>
                                    <div class="color-option me-3 mb-3" style="background-color: #dc3545;" data-color="red"></div>
                                    <div class="color-option me-3 mb-3" style="background-color: #fd7e14;" data-color="orange"></div>
                                    <div class="color-option me-3 mb-3" style="background-color: #6f42c1;" data-color="purple"></div>
                                </div>
                            </div>
                            
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                <button type="button" id="saveAppearance" class="btn btn-primary">
                                    <i class="bi bi-save me-1"></i>Guardar Preferencias
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 80px;
        height: 80px;
        background-color: var(--primary-color);
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    .avatar-initials {
        color: white;
        font-size: 32px;
        font-weight: bold;
    }
    
    .color-option {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        cursor: pointer;
        transition: transform 0.2s;
    }
    
    .color-option:hover {
        transform: scale(1.1);
    }
    
    .color-option.selected {
        box-shadow: 0 0 0 3px white, 0 0 0 6px var(--primary-color);
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/settings.js" asp-append-version="true"></script>
}
