@model StudentRegistrationSystem.Models.Student

@{
    ViewData["Title"] = "Detalles del Estudiante";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
            <p class="lead">Información completa del estudiante.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">@Model.Nombre</h3>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h5 class="text-muted"><i class="bi bi-person me-2"></i>Edad</h5>
                                <p class="fs-5">@Model.Edad años</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h5 class="text-muted"><i class="bi bi-book me-2"></i>Curso</h5>
                                <p class="fs-5">@Model.Curso</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3">
                                <h5 class="text-muted"><i class="bi bi-graph-up me-2"></i>Promedio</h5>
                                <div class="progress" style="height: 25px;">
                                    @{
                                        var percentage = (int)(Model.Promedio * 10);
                                        var colorClass = percentage >= 70 ? "bg-success" : 
                                                        percentage >= 50 ? "bg-warning" : "bg-danger";
                                    }
                                    <div class="progress-bar @colorClass" role="progressbar" 
                                         style="width: @percentage%;" 
                                         aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100">
                                        @Model.Promedio.ToString("F2")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                            <i class="bi bi-arrow-left me-1"></i>Volver
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil me-1"></i>Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
