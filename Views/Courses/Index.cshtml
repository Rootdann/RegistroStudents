@model IEnumerable<StudentRegistrationSystem.Models.Course>

@{
    ViewData["Title"] = "Cursos Activos";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
            <p class="lead">Administra los cursos disponibles en el sistema.</p>
        </div>
    </div>
    
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Error:</strong> @ViewBag.ErrorMessage
        </div>
    }

    <div class="row mb-4">
        <div class="col">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Nuevo Curso
            </a>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model) {
            <div class="col">
                <div class="card h-100 shadow-sm @(item.IsActive ? "" : "border-danger")">
                    <div class="card-header @(item.IsActive ? "bg-success" : "bg-danger") text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">@item.Name</h5>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-light text-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-light text-danger">Inactivo</span>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        <p class="card-text mb-3">@item.Description</p>
                        <ul class="list-group list-group-flush mb-3">
                            <li class="list-group-item d-flex justify-content-between">
                                <span><i class="bi bi-award me-2"></i>Cr√©ditos:</span>
                                <strong>@item.Credits</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span><i class="bi bi-people me-2"></i>Estudiantes:</span>
                                <strong>0</strong>
                            </li>
                        </ul>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil me-1"></i>Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-info-circle me-1"></i>Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash me-1"></i>Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
