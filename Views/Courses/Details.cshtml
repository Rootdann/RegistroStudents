@model StudentRegistrationSystem.Models.Course

@{
    ViewData["Title"] = "Detalles del Curso";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
            <p class="lead">Información completa del curso.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header @(Model.IsActive ? "bg-success" : "bg-danger") text-white">
                    <h3 class="card-title mb-0">@Model.Name</h3>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <h5 class="text-muted"><i class="bi bi-info-circle me-2"></i>Descripción</h5>
                        <p class="fs-5">@Model.Description</p>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h5 class="text-muted"><i class="bi bi-award me-2"></i>Créditos</h5>
                                <p class="fs-5">@Model.Credits</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h5 class="text-muted"><i class="bi bi-toggle-on me-2"></i>Estado</h5>
                                <p class="fs-5">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <h5 class="text-muted mb-3"><i class="bi bi-people me-2"></i>Estudiantes Inscritos (@(ViewBag.Students != null ? ViewBag.Students.Count : 0))</h5>
                        
                        @if (ViewBag.Students != null && ViewBag.Students.Count > 0)
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Edad</th>
                                            <th>Promedio</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var student in ViewBag.Students)
                                        {
                                            <tr>
                                                <td>@student.Nombre</td>
                                                <td>@student.Edad</td>
                                                <td>@student.Promedio.ToString("F2")</td>
                                                <td>
                                                    <a asp-controller="Students" asp-action="Details" asp-route-id="@student.Id" class="btn btn-sm btn-outline-info">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>No hay estudiantes inscritos en este curso.
                            </div>
                        }
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                            <i class="bi bi-arrow-left me-1"></i>Volver
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil me-1"></i>Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
